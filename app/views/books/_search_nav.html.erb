<div class="sticky-nav" >
  <h4>Book Search &nbsp; <a href="https://books.google.com"><%= image_tag('poweredbygoogle.png') %></a></h4>

  <nav>
    <div class="nav-wrapper">
      <%= form_tag("/books", method: "get", id: "books-form", class: "input-field teal lighten-3") do %>
        <input id="query-input" type="search" placeholder="Enter search terms here" name="query" required value='<%= @api_client.try(:query) %>' >
        <label class="label-icon" for="search"><i class="material-icons">search</i></label>
        <button class="not-visible">Search</button>
      <% end %>
    </div>

  </nav>
  <% if @api_client && @api_client.page_number && @books %>
    <%= render "page_nav" %>
  <% end %>
  <hr>
</div>
