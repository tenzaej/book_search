<!DOCTYPE html>
<html>
  <head>
    <title>Book Search</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload', async: true %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', async: true %>
  </head>

  <body>
    <div class="container" >
      <div class="sticky-nav" >
        <h4>Book Search &nbsp;
          <a href="https://books.google.com">
            <%= image_tag('poweredbygoogle.png') %>
          </a>
        </h4>
        <%= render "search_nav", query: @query %>
        <div id="pagination-nav">
          <% if @page %>
            <%= render "page_nav", page: @page, query: @query, books: @books %>
          <% end %>
        </div>
        <hr>
      </div>
      <div id="app-body" >
        <%= yield %>
      </div>
    </div>
  </body>
</html>
